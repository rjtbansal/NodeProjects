extends layout

block content
 h2.page-header Login
 p Login with your credentials below
 form(method='post',action='/users/login')
  .form-group
   label Username
   input.form-control(name='username',type='text',placeholder='Enter new username')
  .form-group
   label Password
   input.form-control(name='password',type='password',placeholder='Enter new password') 
  input.btn.btn-primary(type='submit', name='submit', value='Login') 