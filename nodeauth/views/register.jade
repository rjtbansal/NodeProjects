extends layout

block content
 h2.page-header Register
 p Register to our app using the form below
 ul.errors
  if errors
   each error in errors
    li.alert.alert-danger #{error.msg}
 form(method='post',action='/users/register', enctype='multipart/form-data')
  .form-group
   label Name
   input.form-control(name='name',type='text',placeholder='Enter your name')
  .form-group
   label Email
   input.form-control(name='email',type='email',placeholder='Enter your email')
  .form-group
   label Username
   input.form-control(name='username',type='text',placeholder='Enter new username')
  .form-group
   label Password
   input.form-control(name='password',type='password',placeholder='Enter new password') 
  .form-group
   label Confirm Password
   input.form-control(name='conf_password',type='password',placeholder='Confirm password')
  .form-group
   label Upload Profile Picture
   input.form-control(name='profile_pic',type='file')
  input.btn.btn-primary(type='submit', name='submit', value='Register') 